#===================================================================
# Swift Format Rules
#===================================================================

#-------------------------------------------------------------------
# General Configuration
#-------------------------------------------------------------------
# Swift version
--swiftversion 6.0

# Exclude directories (build artifacts, dependencies, etc.)
--exclude .build
--exclude DerivedData
--exclude fastlane
--exclude .git
--exclude build
--exclude xcbuild
--exclude **/*.generated.swift
--exclude Sources/HelloFrameAnimation/.build

#-------------------------------------------------------------------
# Indentation & Spacing
#-------------------------------------------------------------------
# Indentation settings
--indent 4                       # Set indent width to 4 spaces
--indentcase true               # Indent case statements more than switch
--maxwidth 120                   # Maximum line width is 120 characters
--trimwhitespace always          # Remove whitespace at beginning and end of lines
--commas always                  # Add space after commas
--linebreaks lf                  # Unify line breaks to LF

#-------------------------------------------------------------------
# Braces & Structure
#-------------------------------------------------------------------
# Brace style
--allman false                   # Swift standard brace style: place opening brace on same line as condition
                                 # Example: if (condition) {
                                 #        code
                                 #     }
                                 
--closingparen balanced          # Align closing parenthesis at same level as start for multi-line function calls, etc.
                                 # Example: someFunction(
                                 #        parameter1: value1,
                                 #        parameter2: value2
                                 #     )  // ‚Üê closing parenthesis at same indent level as call start

# Semicolons
--semicolons never               # Do not use semicolons

#-------------------------------------------------------------------
# Wrapping & Collections
#-------------------------------------------------------------------
# Wrapping long argument lists and collections
--wraparguments before-first     # When wrapping argument lists, wrap before first argument (after opening parenthesis)
                                 # Example: someFunction(  // wrap after parenthesis
                                 #        arg1: value1,
                                 #        arg2: value2,
                                 #        arg3: value3
                                 #     )
                                 # Long argument lists are easily identifiable and separated from function names

--wrapcollections before-first   # When wrapping collection literals like arrays and dictionaries, wrap before first element
                                 # Example: let array = [  // wrap after bracket
                                 #        item1,
                                 #        item2,
                                 #        item3
                                 #     ]
                                 # 
                                 # let dictionary = [  // wrap after bracket
                                 #        "key1": value1,
                                 #        "key2": value2,
                                 #        "key3": value3
                                 #     ]
                                 # Each element at same indent level, visually organized and readable